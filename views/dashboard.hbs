{{> menu id="dashboard"}}

{{#each playlists}}
  <section class="ui segment">
    <h2 class="ui header">
      {{title}}
    </h2>
  <p>
    Total Duration: {{duration}}
    </p>
    <a href="/playlist/{{id}}">
      <button class="ui icon button">
        <i class="folder open icon"></i>
      </button>
    </a>
    <a href="/dashboard/deleteplaylist/{{id}}">
      <button class="ui icon button">
        <i class="trash icon"></i>
      </button>
    </a>
  </section>
{{/each}}