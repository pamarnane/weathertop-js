<form class="ui stacked segment form" action="/station/{{station.id}}/addreading" method="POST">
  <div class="five fields">
    <div class="field">
      <label>Code</label>
      <select name="code" class="ui simple dropdown">
        <option value="100">100</option>
        <option value="200">200</option>
        <option value="300">300</option>
        <option value="400">400</option>
        <option value="500">500</option>
        <option value="600">600</option>
        <option value="700">700</option>
        <option value="800">800</option>
      </select>
    </div>
    <div class="field">
      <label>Temperature (degC)</label>
      <input placeholder="00.0" type="number" name="temperature" step="0.01">
    </div>
    <div class="field">
      <label>Wind Speed (km/hr)</label>
      <input placeholder="00.00" type="number" name="windSpeed" step="0.01" max="117">
    </div>
    <div class="field">
      <label>Wind Direction (deg)</label>
      <input placeholder="0-360" type="number" name="windDirection" max="360">
    </div>
    <div class="field">
      <label>Pressure (hPa)</label>
      <input placeholder="000" type="number" name="pressure">
    </div>
  </div>
  <button class="ui blue submit button">Add Reading</button>
</form>