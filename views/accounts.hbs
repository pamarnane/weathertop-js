{{> menu id="accounts"}}

<div class="ui two column grid basic middle aligned segment">
  <div class="column">
    <form class="ui segment form" action="/accounts/{{member.id}}/update" method="POST">
      <h3 class="ui header">Account Details</h3>
      <div class="two fields">
        <div class="field">
          <label>First Name</label>
          <input value="{{member.firstName}}" type="text" name="firstname">
        </div>
        <div class="field">
          <label>Last Name</label>
          <input value="{{member.lastName}}" type="text" name="lastname">
        </div>
      </div>
      <div class="field">
        <label>Email</label>
        <input value="{{member.email}}" type="text" name="email">
      </div>
      <div class="field">
        <label>Password</label>
        <input value="{{member.password}}" type="password" name="password">
      </div>
      <button class="ui blue submit button">Save</button>
      <button class="ui red submit button" formaction="/accounts/{{member.id}}/delete" method="POST">Delete</button>
    </form>
  </div>
  <div class="column">
    <img class="ui image" src="/public/images/climate-icons.png">
  </div>
</div>